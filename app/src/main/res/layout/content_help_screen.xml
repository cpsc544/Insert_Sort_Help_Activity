<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.groupone.insersorthelpfile.HelpScreen"
    tools:showIn="@layout/activity_help_screen"
    android:textAlignment="center">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stacksort"
            android:id="@+id/textView"
            android:visibility="visible"
            android:textSize="70sp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/help"
            android:id="@+id/textView2"
            android:textSize="50sp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@string/for_each_variable_in_your_array_please_enter_a_whole_number_integer_with_the_value_of_0_to_9_in_the_text_field_as_you_input_each_appropriate_number_the_value_will_be_displayed_on_the_screen_your_array_must_contain_at_least_2_but_no_more_than_8_variables_when_you_are_satisfied_with_your_array_press_the_sort_button_to_view_your_results"
            android:id="@+id/HelpText"
            android:textSize="24sp"
            android:layout_weight="1"
            android:gravity="center_vertical" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0" />

    </LinearLayout>

</RelativeLayout>
